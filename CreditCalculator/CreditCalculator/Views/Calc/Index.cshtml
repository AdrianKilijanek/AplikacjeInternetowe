@model CreditCalculator.Models.CalcForm

@{
    ViewData["Title"] = "Kalkulator Kredytowy";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="mb-4">@ViewData["Title"]</h1>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">Błąd!</h4>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }

            <form method="post" action="@Url.Action("Calculate", "Calc")" class="needs-validation">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="Amount" class="form-label">@Html.DisplayNameFor(m => m.Amount)</label>
                    <input type="number"
                           class="form-control @(ViewData.ModelState["Amount"]?.ValidationState == Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid ? "is-invalid" : "")"
                           id="Amount"
                           name="Amount"
                           step="100"
                           placeholder="np. 100000"
                           value="@Model.Amount"
                           required />
                    @Html.ValidationMessageFor(m => m.Amount)
                </div>

                <div class="mb-3">
                    <label for="InterestRate" class="form-label">@Html.DisplayNameFor(m => m.InterestRate)</label>
                    <input type="number"
                           class="form-control @(ViewData.ModelState["InterestRate"]?.ValidationState == Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid ? "is-invalid" : "")"
                           id="InterestRate"
                           name="InterestRate"
                           step="0.01"
                           placeholder="np. 5.5"
                           value="@Model.InterestRate"
                           required />
                    @Html.ValidationMessageFor(m => m.InterestRate)
                </div>

                <div class="mb-3">
                    <label for="Months" class="form-label">@Html.DisplayNameFor(m => m.Months)</label>
                    <input type="number"
                           class="form-control @(ViewData.ModelState["Months"]?.ValidationState == Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid ? "is-invalid" : "")"
                           id="Months"
                           name="Months"
                           placeholder="np. 240"
                           value="@Model.Months"
                           required />
                    @Html.ValidationMessageFor(m => m.Months)
                </div>

                <button type="submit" class="btn btn-primary w-100">Oblicz</button>
            </form>
        </div>
    </div>
</div>
