@model dynamic

@{
    ViewData["Title"] = "Wynik Obliczeń";
    var form = Model.Form as CreditCalculator.Models.CalcForm;
    var result = Model.Result as CreditCalculator.Models.CalcResult;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="mb-4">@ViewData["Title"]</h1>

            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Parametry Kredytu</h5>
                </div>
                <div class="card-body">
                    <p><strong>Kwota kredytu:</strong> @form.Amount.ToString("C")</p>
                    <p><strong>Oprocentowanie roczne:</strong> @form.InterestRate.ToString("N2")%</p>
                    <p><strong>Okres spłaty:</strong> @form.Months miesięcy</p>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Wyniki Obliczeń</h5>
                </div>
                <div class="card-body">
                    <p><strong>Rata miesięczna:</strong> <span class="text-danger">@result.MonthlyPayment.ToString("C")</span></p>
                    <p><strong>Rata roczna:</strong> @result.AnnualPayment.ToString("C")</p>
                    <p><strong>Całkowita kwota do spłaty:</strong> @result.TotalPayment.ToString("C")</p>
                    <p><strong>Razem odsetki:</strong> @result.TotalInterest.ToString("C")</p>
                </div>
            </div>

            <a href="@Url.Action("Index", "Calc")" class="btn btn-secondary w-100">Nowe Obliczenie</a>
        </div>
    </div>
</div>
