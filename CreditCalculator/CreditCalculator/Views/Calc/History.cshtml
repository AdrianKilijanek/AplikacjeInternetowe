@using CreditCalculator.Models
@model IEnumerable<CreditCalculation>


@{
    ViewData["Title"] = "Historia obliczeń";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Brak zapisanych obliczeń dla tego użytkownika.
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Data</th>
                <th>Kwota</th>
                <th>Oprocentowanie</th>
                <th>Miesięcy</th>
                <th>Rata miesięczna</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@item.Amount.ToString("C")</td>
                    <td>@item.InterestRate.ToString("N2") %</td>
                    <td>@item.Months</td>
                    <td>@item.MonthlyPayment.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-controller="Calc" asp-action="Index" class="btn btn-primary">
    Nowe obliczenie
</a>
